<%- css('css/post') %>
<post>

  <div class="post_title">
    <%- page.title %>
  </div>

  <br /><br />

  <div id="post_content">
    <%- page.content %>
  </div>

  <% if (config.highlight.enable) { %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.0/styles/default.min.css">
  <% } else if (config.prismjs.enable) { %>

  <%- css('css/utils/prism') %> 

  <% if (!config.prismjs.preprocess) { %>
  <%- js('js/prism.js') %>
  <% } %>

  <% } %>

  <br />

  <% if (theme.busuanzi.enable) { %>
  <!-- <script async src="https://busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script> -->
  <span id="busuanzi_container_site_pv">
    <%= __("post.busuanzi.visit") %><span id="busuanzi_value_page_pv"></span>
    <%= __("post.busuanzi.time") %>
  </span>
  <% } %>
  <br /><br />


  <%- partial('_partial/copyright') %>
  <%- partial('_partial/top') %>
  <%- partial('_partial/comment') %>

</post>